{
  "name": "@ianwalter/bff-webdriver",
  "description": "A bff plugin to enable WebDriver-based testing",
  "version": "5.7.0",
  "author": "Ian Walter <public@iankwalter.com> (https://iankwalter.com)",
  "homepage": "https://github.com/ianwalter/bff-webdriver#readme",
  "license": "SEE LICENSE IN LICENSE",
  "bin": {
    "bff-webdriver": "cli.js"
  },
  "scripts": {
    "lint": "eslint .",
    "test": "bff",
    "bff-webdriver": "./cli.js",
    "postinstall": "./cli.js setup",
    "dev": "parcel tests/site/index.html",
    "build": "parcel build tests/site/index.html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ianwalter/bff-webdriver.git"
  },
  "bugs": {
    "url": "https://github.com/ianwalter/bff-webdriver/issues"
  },
  "keywords": [
    "bff",
    "webdriver",
    "selenium",
    "test",
    "testing",
    "automated",
    "standalone",
    "browserstack"
  ],
  "files": [
    "index.js",
    "cleanup.js",
    "cli.js",
    "integrations"
  ],
  "dependencies": {
    "@ianwalter/bsl": "^3.0.0",
    "@ianwalter/cli": "^4.1.0",
    "@ianwalter/print": "^6.0.0",
    "dotenv": "^8.2.0",
    "execa": "^4.0.2",
    "got": "^10.6.0",
    "p-settle": "^4.1.1",
    "selenium-standalone": "^6.17.0",
    "webdriver": "^6.1.14"
  },
  "devDependencies": {
    "@babel/core": "^7.10.2",
    "@ianwalter/bff": "^9.8.2",
    "@ianwalter/eslint-config": "^5.0.0",
    "@ianwalter/history-router": "^5.3.0",
    "@ianwalter/release": "^5.0.0",
    "@ianwalter/renovate-config": "^1.3.0",
    "babel-preset-preact": "^2.0.0",
    "parcel": "^2.0.0-alpha.3.2",
    "preact": "^10.4.4"
  },
  "bff": {
    "logLevel": "debug",
    "plugins": [
      "tests/config",
      "index"
    ],
    "webdriver": {
      "capabilities": {
        "browserName": "firefox"
      }
    }
  },
  "browserslist": "last 1 Chrome versions",
  "babel": {
    "presets": [
      "preact"
    ]
  },
  "renovate": {
    "extends": [
      "@ianwalter"
    ]
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@ianwalter"
    ]
  }
}
